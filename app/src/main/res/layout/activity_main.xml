<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </RelativeLayout>

    <ImageButton
        android:id="@+id/map_cur_loc"
        android:layout_width="36dp"
        android:layout_height="36dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="12dp"
        android:layout_marginBottom="340dp"

        android:background="@drawable/click_selector"
        android:padding="8sp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/baseline_my_location_black_36" />

    <ImageButton
        android:id="@+id/map_scale_up"
        android:layout_width="36dp"
        android:layout_height="36dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="12dp"
        android:layout_marginBottom="266dp"

        android:background="@drawable/click_selector"
        android:padding="5sp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/baseline_add_black_36" />

    <ImageButton
        android:id="@+id/map_scale_down"
        android:layout_width="36dp"
        android:layout_height="36dp"


        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="12dp"
        android:layout_marginBottom="230dp"

        android:background="@drawable/click_selector"
        android:padding="5sp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/baseline_remove_black_36" />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/places_ic_search"
        android:tint="@color/colorBlack"
        app:backgroundTint="@color/color_yanawha_main"
        app:fabSize="normal"
        app:rippleColor="@color/color_yanawha_sub" />


</RelativeLayout>
